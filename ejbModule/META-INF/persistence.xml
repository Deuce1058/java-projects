<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="userProfile">
		<jta-data-source>jdbc/yardiDatasource</jta-data-source>
		<class>com.yardi.ejb.UserProfile</class>
	</persistence-unit>
	<persistence-unit name="pwdPolicy">
		<jta-data-source>jdbc/yardiDatasource</jta-data-source>
		<class>com.yardi.ejb.PpPwdPolicy</class>
	</persistence-unit>
	<persistence-unit name="uniqueToken">
		<jta-data-source>jdbc/yardiDatasource</jta-data-source>
		<class>com.yardi.ejb.UniqueTokens</class>
	</persistence-unit>
	<persistence-unit name="groupsMaster">
		<jta-data-source>jdbc/yardiDatasource</jta-data-source>
		<class>com.yardi.ejb.GroupsMaster</class>
		<class>com.yardi.ejb.UserGroups</class>
	</persistence-unit>
	<persistence-unit name="groupPermissions">
		<jta-data-source>jdbc/yardiDatasource</jta-data-source>
		<class>com.yardi.ejb.GroupPermissions</class>
	</persistence-unit>
	<persistence-unit name="permissionsMaster">  
		<jta-data-source>jdbc/yardiDatasource</jta-data-source>
		<class>com.yardi.ejb.PermissionsMaster</class>
	</persistence-unit>
	<persistence-unit name="sessionsTable" transaction-type="JTA">
		<jta-data-source>jdbc/yardiDatasource</jta-data-source>
		<class>com.yardi.ejb.SessionsTable</class>
	</persistence-unit>
</persistence>
